{
  "name": "boxcharter-server",
  "version": "1.0.0-alpha.1",
  "description": "Server for web app to create chord / lyric box charts",
  "scripts": {
    "start": "node src/app.js",
    "setup": "npm install && npm run test:db:init && npm run dev:db:init",
    "test": "source env/test.sh && npm run test:server",
    "test:server": "mocha --reporter dot --recursive test --exit",
    "test:db:drop": ". env/test.sh && dropdb --if-exists $DB_NAME",
    "test:db:create": "source env/test.sh && createdb $DB_NAME && psql $DB_NAME < src/model/schema.sql",
    "test:db:init": "npm run test:db:drop && npm run test:db:create",
    "dev:start": "source env/dev.sh && nodemon src/app.js",
    "dev:db:drop": "source env/dev.sh && dropdb --if-exists $DB_NAME",
    "dev:db:create": "source env/dev.sh && createdb $DB_NAME && psql $DB_NAME < src/model/schema.sql",
    "dev:db:seed": "source env/dev.sh && node ../shared/test/utilities/db_reset.js seed",
    "dev:db:init": "npm run dev:db:drop && npm run dev:db:create && npm run dev:db:seed"
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.1",
    "express-winston": "^2.4.0",
    "jwt-simple": "^0.5.1",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "pg-async": "^3.1.0",
    "pg-promise": "^6.10.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "ajv": "^5.2.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyrightsister/boxcharter.git"
  },
  "author": "Bonnie Schulkin",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/flyrightsister/boxcharter/issues"
  },
  "homepage": "https://github.com/flyrightsister/boxcharter#readme",
  "keywords": [
    "music",
    "chart",
    "chord",
    "lyric",
    "box chart"
  ]
}
